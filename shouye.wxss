/* pages/shouye/shouye.wxss */
page{
  width:100%;
  height:100%;
}
.shouye{
  width:100%;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shouye scroll-view{
  width:94%;
  height:100vh;
}
.shouye_lun{
  width: 100%;
  height:260rpx ;
}
.shouye_lun image{
  width: 100%;
  height: 100%;
}
.shouye_dao{
  width: 100%;
  display: grid;
  grid-template-columns: repeat(3,1fr);
}
.shouye_daoGrid{
  margin: 10rpx 30rpx;
}
.shouye_daoGridTop{
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shouye_daoGridTop image{
  width: 120rpx;
  height: 120rpx;
  border: 7rpx solid #e00fd6;
  border-radius: 50%;
}
.shouye_daoGridBottom{
  width: 100%;
  text-align: center;
  font-size: 25rpx;
}
.shouye_jiluTitle{
  width: 100%;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  font-weight: bold;
}
.shouye_jiluList{
  width: 100%;
  height: 200rpx;
  background: #e6e0e5;
  margin:20rpx 0;
}
.shouye_jiluListTop{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: bolder;
}
.shouye_jiluListBottom{
  width: 100%;
  height: 50rpx;
  line-height: 60rpx;
  font-size: 22rpx;
}